<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main">

    <FrameLayout
        android:id="@+id/previewLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter" />
        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone" />
        <TextView
            android:id="@+id/actionInfoView"
            style="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_gravity="center"
            android:background="@color/translucent_background"
            android:textStyle="bold"
            android:visibility="gone"
            android:text="[Info]" />

    </FrameLayout>

    <com.nti.nice_gallery.views.ViewActionBar
        android:id="@+id/topActionBar"
        style="@style/Custom_ActionBar"
        android:background="@color/translucent_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.nti.nice_gallery.views.buttons.ButtonFileInfo
            android:id="@+id/buttonFileInfo"
            style="@style/Custom_ActionBar_Button" />

    </com.nti.nice_gallery.views.ViewActionBar>

    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="8dp"
        android:background="@color/translucent_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.nti.nice_gallery.views.ViewActionBar
            android:id="@+id/bottomActionBar"
            style="@style/Custom_ActionBar">

            <com.nti.nice_gallery.views.buttons.ButtonPlay
                android:id="@+id/buttonPlay"
                style="@style/Custom_ActionBar_Button" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:thumbTint="@color/orange_700"
                android:progressTint="@color/orange_700"
                android:visibility="gone" />

            <TextView
                android:id="@+id/timeView"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textAlignment="center"
                android:layout_marginRight="8dp"
                android:visibility="gone" />

        </com.nti.nice_gallery.views.ViewActionBar>


        <TextView
            android:id="@+id/infoView"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 / 0"
            android:textAlignment="center" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>